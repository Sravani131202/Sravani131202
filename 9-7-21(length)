import java.util.*;
class length 
{
	public static void main(String[] args)
	 {
		String str;
		Scanner sc=new Scanner(System.in);
		System.out.print("enter a string");
		str=sc.nextLine();
		String ch[]=str.split(" ");
		int n=ch.length;
			int i=0;
		if(n==0)
		System.out.print(n);
		else
		{
		for(int j=0;j<n;j++)
		{
			String st=ch[j];
			int m=st.length();
			i=i+m;
		}
		}
		System.out.print(i);
	}
}
output
enter a stringsravs1234
9
